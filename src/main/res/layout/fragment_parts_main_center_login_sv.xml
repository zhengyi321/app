<?xml version="1.0" encoding="utf-8"?>
<com.gototongcheng.widget.scrollview.SpringScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_center_login_bg_black"
    >
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical"
        >
        <!--头像-->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <ImageView
                android:layout_width="@dimen/dimen_70dp"
                android:layout_height="@dimen/dimen_70dp"
                android:background="@mipmap/goto_login_head"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/dimen_40dp"
                />
        </RelativeLayout>
        <!--头像-->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_60dp"
            android:layout_marginTop="@dimen/dimen_40dp"
            android:orientation="horizontal"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_40dp"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/shape_input_register_bg"
                android:orientation="horizontal"
                android:layout_marginLeft="@dimen/dimen_40dp"
                android:layout_marginTop="@dimen/dimen_11dp"
                android:layout_marginRight="@dimen/dimen_40dp"
                >

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_40dp"
                android:layout_gravity="center_horizontal"
                android:padding="@dimen/dimen_10dp"
                android:background="@drawable/shape_input_register_bg2"
                android:layout_marginLeft="@dimen/dimen_40dp"
                android:layout_marginTop="@dimen/dimen_10dp"
                android:layout_marginRight="@dimen/dimen_40dp"
                android:orientation="horizontal"
                >
                <TextView
                    android:layout_width="@dimen/dimen_50dp"
                    android:layout_height="wrap_content"
                    android:text="@string/string_username"
                    android:textStyle="bold"
                    android:textSize="@dimen/dimen_15dp"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="0.1"
                    android:layout_marginRight="@dimen/dimen_30dp"
                    />
                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:hint="@string/string_username"
                    android:textSize="@dimen/dimen_13dp"
                    android:background="@null"
                    android:layout_gravity="center_vertical"
                    android:maxLines="1"
                    android:layout_weight="30"

                    />
                <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@mipmap/goto_down"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="0.01"
                    />
            </LinearLayout>
        </FrameLayout>


        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_60dp"
            android:layout_marginTop="@dimen/dimen_20dp"
            android:orientation="horizontal"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_40dp"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/shape_input_register_bg"
                android:orientation="horizontal"
                android:layout_marginLeft="@dimen/dimen_40dp"
                android:layout_marginTop="@dimen/dimen_11dp"
                android:layout_marginRight="@dimen/dimen_40dp"
                >

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_40dp"
                android:layout_gravity="center_horizontal"
                android:padding="@dimen/dimen_10dp"
                android:background="@drawable/shape_input_register_bg2"
                android:layout_marginLeft="@dimen/dimen_40dp"
                android:layout_marginTop="@dimen/dimen_10dp"
                android:layout_marginRight="@dimen/dimen_40dp"
                android:orientation="horizontal"
                >
                <TextView
                    android:layout_width="@dimen/dimen_40dp"
                    android:layout_height="wrap_content"
                    android:text="@string/string_password"
                    android:textStyle="bold"
                    android:textSize="@dimen/dimen_15dp"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="0.01"
                    android:layout_marginRight="@dimen/dimen_30dp"
                    />
                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:hint="@string/string_password"
                    android:background="@null"
                    android:password="true"
                    android:layout_gravity="center_vertical"
                    android:maxLines="1"
                    android:textSize="@dimen/dimen_13dp"
                    android:layout_weight="50"
                    />

            </LinearLayout>
        </FrameLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/dimen_20dp"
            android:id="@+id/lly_remember_login"
            >
            <CheckBox
                android:id="@+id/cb_remember_login"
                android:layout_width="@dimen/dimen_17dp"
                android:layout_height="@dimen/dimen_17dp"
                android:layout_marginLeft="@dimen/dimen_45dp"
                android:button="@null"
                android:background="@drawable/selector_checkbox_green_trans"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/string_remember_my_login_data"
                android:layout_marginLeft="@dimen/dimen_10dp"
                android:textStyle="bold"
                />
        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_40dp"
            android:background="@drawable/shape_common_submit_green_bg"
            android:padding="@dimen/dimen_10dp"
            android:layout_marginTop="@dimen/dimen_50dp"
            android:layout_marginLeft="@dimen/dimen_40dp"
            android:layout_marginRight="@dimen/dimen_40dp"

            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/string_login"
                android:textColor="@color/black"
                android:layout_centerInParent="true"
                android:textSize="@dimen/dimen_15dp"
                android:textStyle="bold"
                />
        </RelativeLayout>
        </LinearLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_50dp"
            android:layout_marginBottom="@dimen/dimen_50dp"
            >
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_centerInParent="true"
                >
                <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@mipmap/goto_problem"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/string_forget"
                    android:layout_marginLeft="@dimen/dimen_10dp"
                    android:layout_gravity="center_vertical"
                    />
            </LinearLayout>
        </RelativeLayout>

    </LinearLayout>
</com.gototongcheng.widget.scrollview.SpringScrollView>