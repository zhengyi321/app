<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="@dimen/dimen_60dp"
    android:background="@color/white"
    >
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/string_area_select"
        android:textColor="@color/black"
        android:layout_gravity="center_vertical"
        android:textStyle="bold"
        android:textSize="@dimen/dimen_14dp"
        android:layout_marginLeft="@dimen/dimen_40dp"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="@string/string_area_select_please"
        android:textColorHint="@color/gray"
        android:textSize="@dimen/dimen_13dp"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="@dimen/dimen_20dp"
        />
    <ImageView
        android:layout_width="@dimen/dimen_7dp"
        android:layout_height="@dimen/dimen_7dp"
        android:background="@mipmap/goto_down_black"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="@dimen/dimen_20dp"
        />
</LinearLayout>